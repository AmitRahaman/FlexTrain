<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ui.userpage.UserFragment">



        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@color/light_gray"
            android:padding="@dimen/cardview_default_elevation"
            android:text="Logged in as: "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_below="@id/user_name_text_view"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/delete_account_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:layout_below="@id/logout_button"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true" />


        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_below="@id/delete_account_button"
            android:layout_marginTop="16dp"
            android:inputType="textEmailAddress"
            android:layout_centerHorizontal="true"
            android:enabled="false" />


        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_below="@id/email_edit_text"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"/>


        <EditText
            android:id="@+id/dob_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:layout_below="@id/name_edit_text"
            android:layout_marginTop="16dp"
            android:inputType="date"
            android:layout_centerHorizontal="true"/>


        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:layout_below="@id/dob_edit_text"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/modify_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify"
            android:layout_below="@id/password_edit_text"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />


        <ImageButton
            android:id="@+id/guide_icon"
            android:layout_width="53dp"
            android:layout_height="51dp"
            android:layout_alignRight="@id/password_edit_text"
            android:layout_marginRight="-5dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Guide"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/guide_asset" />



    </RelativeLayout>
</ScrollView>
